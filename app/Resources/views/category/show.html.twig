{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Category</h1>

    <table>
        <thead>
            <th>Id</th>
            <th>{{ 'category.name' | trans }}</th>
            <th>{{ 'category.nameEn' | trans }}</th>
            <th>{{ 'category.description' | trans }}</th>
            <th>Id</th>
        </thead>
        <tbody>
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.nom }}</td>
                <td>{{ category.trad }}</td>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('category_index') }}">{{ 'category.back' | trans }}</a>
        </li>
        <li>
            <a href="{{ path('category_edit', { 'id': category.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
