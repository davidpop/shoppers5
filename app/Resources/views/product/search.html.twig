{% extends('layout.html.twig') %}

{% block body %}

    <div class="site-section">
        <div class="container">

            {% if text_haut %}
                <h2 class="text-danger text-center">{{  text_haut }}</h2>
                <br/>
            {% endif %}

            <div class="row mb-5">

                {% if ps is empty %}
                    <h3 class="text-center">Aucun produit n'a été trouvé</h3>
                {% else %}
                    {% for p in ps %}
                        <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                            <div class="block-4 text-center border">
                                <figure class="block-4-image">
                                    <a href="{{ path('product_show',{'id': p.getId()} ) }}">
                                        {% if p.getPhotoPrincipale() %}
                                            <img src="/images/products/{{ p.photoPrincipale.imageName }}"
                                                 alt="{{ p.photoPrincipale.alt }}"
                                                 class="img-fluid"
                                            />
                                        {% endif %}
                                    </a>
                                </figure>
                                <div class="block-4-text p-4">
                                    <h3><a href="{{ path('product_show',{'id': p.getId()} ) }}">
                                            {{ p.getNom() }}
                                        </a></h3>
                                    <p class="mb-0">
                                        {{ p.getDescription() }}
                                    </p>
                                    <p class="text-primary font-weight-bold">
                                        {{ p.getPrix() }} €
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>

        </div>
    </div>

{% endblock %}